<script>

    console.log("starting Danny Insurance Risk Calculator")

    
    function CalculateRisk() {
        console.log("calculateRisk()");

        
        let ageResponseValue = parseInt(Document.getElementbyId("ageID").selectedOption[0].value);
        console.log("ageResponsiveValue = " + ageResponsiveValue); 
        
        
        let bmiResponseValue = parseInt(Document.getElementbyId("bmiD").selectedOption[0].value);
        console.log("bmiResponsiveValue = " + bmiResponsiveValue); 

        
        let bloodPressureResponseValue = parseInt(Document.getElementbyId("ageID").selectedOption[0].value);
        console.log("bloodpressureResponsiveValue = " + bloodpressureResponsiveValue); 

        let diabetesResponseValue = parseInt(Document.getElementbyId("diabetesID").selectedOption[0].value);
        console.log("alzheimers = " + diabetesResponsiveValue); 

        let cancerResponseValue = parseInt(Document.getElementbyId("cancerID").selectedOption[0].value);
        console.log("alzheimers = " + alzheimersResponsiveValue); 

        let alzheimerResponseValue = parseInt(Document.getElementbyId("cancerrID").selectedOption[0].value);
        console.log("cancerResponseValue = " + cancerResponsiveValue); 

        
        
        
        let totalRisk= ageResponsiveValue + bmiResponseValue + bloodpressureResponseValue + diabetesResponseValue + cancerResponseValue +alzheimersResponseValue;
        console.log("totalRisk= " + totalRisk); 

        documet.getElementlyById("riskID").innerHTML ="your total risk is" +totalRisks

        let message = ""
        if (totalRisk <=20){
            message = "low risk"
        }else if(totalRisk <= 50){
            message = "moderate risk"
        }else if (totalRisk<=75){
            message = "high risk"
        }else{
            message ="unsurable"
        } 

        document.getElementById(messageID).innerHTML = message;
    }


